@import "weui.wxss";

page {
  overflow: hidden;
}

.box1 {
  display: flex;
  justify-content: space-evenly;
  box-sizing: border-box;
}

.title {
  width: 50%;
  height: 40px;
  line-height: 40px;
  font-size: 22px;
  font-weight: bold;
  text-indent: 1em;
  color: #237ab7;
  text-align: center;
  transform: translateX(-15%);
}

.circleContainer {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 140px;
  box-sizing: border-box;
  padding: 10px;
}

.circle {
  height: 120px;
  width: 120px;
  border-radius: 60%;
  background: #237ab7;
  display: flex;
  justify-content: center;
  align-items: center;
}

.innerCircle {
  height: 110px;
  width: 110px;
  border-radius: 50%;
  background: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20px;
}

.box {
  height: 120px;
  width: 120px;
  text-align: center;
  box-sizing: border-box;
}

.boxRow {
  display: flex;
  justify-content: space-evenly;
  height: 60px;
  line-height: 60px;
  align-items: center;
}

.dot {
  height: 20px;
  width: 20px;
  border-radius: 50%;
  background: green;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.title2 {
  height: 40px;
  line-height: 40px;
  font-size: 22px;
  font-weight: bold;
  text-indent: 1em;
  color: #237ab7;
  width: 100%;
}

.echartContainer{
  top: 220px;
}